set R FAIL

echo ---

echo mobile mode at
if mobile mode at
then
	echo mobile firmware-version /dev/ttyS2
	if mobile firmware-version /dev/ttyS2
	then
		echo
		echo Check VSP brigde mode.
		echo

		echo mobile mode default
		if mobile mode default
		then
			echo "!mobile firmware-version /dev/ttyS2"
			if mobile firmware-version /dev/ttyS2
			then
				echo
				echo Unable to switch to VSP brigde mode.
				echo
			else
				set R OK
			fi
		fi
	fi
fi

echo ===

echo $R
