set R FAIL

echo ---

echo test -e /fs/microsd
if test -e /fs/microsd
then
	echo umount /fs/microsd
	umount /fs/microsd
fi

echo mkfatfs /dev/mmcsd0
if mkfatfs /dev/mmcsd0
then
	echo mount -t vfat /dev/mmcsd0 /fs/microsd
	if mount -t vfat /dev/mmcsd0 /fs/microsd
	then
		set R OK
	fi
fi

echo ===

echo $R
