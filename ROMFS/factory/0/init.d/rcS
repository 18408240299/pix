echo "[init] Looking for microSD..."
if mount -t vfat /dev/mmcsd0 /fs/microsd
then
	echo "[init] microSD mounted: /fs/microsd"
	# Start playing the startup tune
	tone_alarm start
else
	set LOG_FILE /dev/null
	echo "[init] No microSD card found"
	# Play SOS
	tone_alarm error
fi

if sercon
then
	echo "[rcS] USB interface connected."
	nshterm /dev/ttyACM0 &
else
	echo "[rcS] USB interface failed."
fi

## Do not run qlog unless needed.
# if qlog start
# then
# 	echo "[rcS] qlog ok."
# else
# 	echo "[rcS] qlog failed."
# fi

if test -e /etc/extras/rcS
then
	sh /etc/extras/rcS &
fi

echo
echo Welcome
echo
